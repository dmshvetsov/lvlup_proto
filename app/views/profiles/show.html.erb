<div class="row">
  <div class="col-lg-12">
    <h2>List of skills</h2>
    <ul class="list-group">
      <% @profile.skills.each do |skill| %>
        <li class="list-group-item">
          <%= link_to skill.title, skill_path(skill.title) %>
          <span class="label label-default">0</span>
          <%= link_to 'lvlup', lvlups_new_path, class: 'btn btn-default btn-sm' %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <%= link_to 'add skill', skills_new_path, class: 'btn btn-default btn-lg' %>
  </div>
</div>
